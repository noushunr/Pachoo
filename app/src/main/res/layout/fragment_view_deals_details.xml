<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imOfferThumbnail"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txt_deal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Deal"
                    android:textColor="@color/text_color_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_deal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_deal"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/nunito_regular"
                    android:text="xxx"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_deal_name"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:text="Description"
                    android:textColor="@color/text_color_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_desc_name"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_desc"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/nunito_regular"
                    android:text="xxx dd ss ccs xx"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_desc_name"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:text="Total"
                    android:textColor="@color/text_color_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_total"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/nunito_regular"
                    android:text="xxx dd ss ccs xx"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txt_valid_till"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:text="Valid Till"
                    android:textColor="@color/text_color_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_valid_till_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_valid_till"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/nunito_regular"
                    android:text="xxx"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_merchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_valid_till_date"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:text="Merchant"
                    android:textColor="@color/text_color_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_merchant"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/nunito_regular"
                    android:text="xxx dd ss ccs xx"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>