<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deals_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/text_color_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_order_name"
                android:layout_alignParentLeft="true"
                android:background="@color/orange" />

            <TextView
                android:id="@+id/order_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_1"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="120dp"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_regular"
                android:maxLines="3"
                android:padding="4dp"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_1"
                android:layout_alignParentRight="true"
                android:fontFamily="@null"
                android:text="afknkl;n"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_order_price"
                android:layout_alignParentRight="true"
                android:text="1 coupon applied"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>