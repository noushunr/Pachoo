<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:maxWidth="240dp"
    android:maxHeight="320dp"
    tools:context="com.presentation.app.dealsnest.ui.SuccessDialogFragment">


    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="340dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_success" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulation"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center"
                android:text="Your Booking has been confirmed"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center"
                android:text="confirmed email has been sent \n to shoffzuser@gmail.com"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/close_success_dialog"
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_stroke_white"
                android:gravity="center"
                android:text="close"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>